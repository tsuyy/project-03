<%= render 'layouts/header' %>



<div class='ui stackable three column grid container'>
  <% @entries.each do |entry| %>
    <div class='column'>
      <div class="ui segment">
        <%= link_to show_entry_path(entry) do %>
        <%= image_tag(entry.avatar.url(:large), class: 'ui medium rounded image') %>
        <% end %>
        <p><%= entry.caption %></p>
        <p><%= entry.location %></p>
        <p ><%= entry.user.name %> | <span>Posted <%= time_ago_in_words(entry.created_at) %> ago</p>
      </div>
    </div>
  <% end %>
</div>
