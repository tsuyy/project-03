<div class='ui form'>
  <div class='fields'>
    <%= form_for(user) do |f| %>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :bio %>
        <%= f.text_field :bio %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div><br>

      <div class="actions">
        <%= f.submit "OK", class: "ui button" %>
      </div>
    <% end %>
  </div>
</div>
