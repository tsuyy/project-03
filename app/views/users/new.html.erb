<br><br><%= render 'layouts/header' %>

<h2 class='ui centered header'>Create Account</h2>

<div class='ui form'>
  <div class='fields'>
    <%= form_for @user, :html => {:class => "align-form"} do |f| %>

      <div class="field">
        <%= f.label :name %>
        <div class='ui left icon input'>
          <%= f.text_field :name %>
          <i class="add user icon"></i>
        </div>
      </div>

      <div class="field">
        <%= f.label :email %>
        <div class='ui left icon input'>
          <%= f.text_field :email %>
          <i class="mail icon"></i>
        </div>
      </div>

      <div class="field">
        <%= f.label :password %>
        <div class='ui left icon input'>
          <%= f.password_field :password %>
          <i class="lock icon"></i>
        </div>
      </div><br>

      <div class="actions">
        <%= f.submit "OK", class: "ui button" %>
      </div>
    <% end %>
  </div>
</div>
